<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="inventory_valuation_historical"
              pageWidth="842" pageHeight="595"
              orientation="Landscape"
              columnWidth="782"
              leftMargin="30" rightMargin="30"
              topMargin="30" bottomMargin="30">

    <parameter name="BRANCH_ID" class="java.lang.String"/>
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <queryString>
        <![CDATA[
            SELECT
              s.snapshot_date            AS snapshot_date,
              b.name                     AS branch_name,
              p.name                     AS product_name,
              pv.sku                     AS variant_sku,
              s.quantity_on_hand         AS quantity_on_hand,
              s.valuation                AS valuation
            FROM inventory_snapshots s
            JOIN branches b          ON b.id = s.branch_id
            JOIN product_variants pv ON pv.id = s.product_variant_id
            JOIN products p          ON p.id = s.product_id
            WHERE s.branch_id = UUID_TO_BIN($P{BRANCH_ID})
              AND s.snapshot_date BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            ORDER BY s.snapshot_date, p.name, pv.sku
        ]]>
    </queryString>

    <field name="snapshot_date" class="java.sql.Date"/>
    <field name="branch_name" class="java.lang.String"/>
    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="quantity_on_hand" class="java.lang.Long"/>
    <field name="valuation" class="java.math.BigDecimal"/>

    <title>
        <band height="36">
            <textField>
                <reportElement x="0" y="0" width="782" height="18"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["INVENTORY VALUATION (HISTORICAL)"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="20" width="782" height="14"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                  "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="18">
            <staticText><reportElement x="0" y="0" width="100" height="18"/><text><![CDATA[Date]]></text></staticText>
            <staticText><reportElement x="100" y="0" width="220" height="18"/><text><![CDATA[Product]]></text></staticText>
            <staticText><reportElement x="320" y="0" width="160" height="18"/><text><![CDATA[SKU]]></text></staticText>
            <staticText><reportElement x="480" y="0" width="120" height="18"/><text><![CDATA[On Hand]]></text></staticText>
            <staticText><reportElement x="600" y="0" width="182" height="18"/><text><![CDATA[Valuation]]></text></staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="16">
            <textField><reportElement x="0" y="0" width="100" height="16"/><textFieldExpression><![CDATA[$F{snapshot_date}]]></textFieldExpression></textField>
            <textField><reportElement x="100" y="0" width="220" height="16"/><textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression></textField>
            <textField><reportElement x="320" y="0" width="160" height="16"/><textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression></textField>
            <textField><reportElement x="480" y="0" width="120" height="16"/><textFieldExpression><![CDATA[$F{quantity_on_hand}]]></textFieldExpression></textField>
            <textField pattern="#,##0.00"><reportElement x="600" y="0" width="182" height="16"/><textFieldExpression><![CDATA[$F{valuation}]]></textFieldExpression></textField>
        </band>
    </detail>
</jasperReport>