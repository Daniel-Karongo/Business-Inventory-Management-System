<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="inventory_stock_movement"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="30" bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="BRANCH_ID" class="java.lang.String"/>
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
              st.timestamp            AS movement_time,
              b.name                  AS branch_name,
              p.name                  AS product_name,
              pv.name                 AS variant_name,
              st.type                 AS transaction_type,
              st.quantity_delta       AS quantity_delta,
              st.unit_cost            AS unit_cost,
              (st.quantity_delta * st.unit_cost) AS value_impact,
              st.reference            AS reference,
              st.note                 AS note,
              st.performed_by         AS performed_by
            FROM stock_transactions st
            JOIN branches b          ON b.id = st.branch_id
            JOIN product_variants pv ON pv.id = st.product_variant_id
            JOIN products p          ON p.id = st.product_id
            WHERE st.branch_id = UUID_TO_BIN($P{BRANCH_ID})
              AND st.timestamp >= $P{FROM_DATE}
              AND st.timestamp <  DATE_ADD($P{TO_DATE}, INTERVAL 1 DAY)
            ORDER BY st.timestamp ASC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="movement_time" class="java.sql.Timestamp"/>
    <field name="branch_name" class="java.lang.String"/>
    <field name="product_name" class="java.lang.String"/>
    <field name="variant_name" class="java.lang.String"/>
    <field name="transaction_type" class="java.lang.String"/>
    <field name="quantity_delta" class="java.lang.Integer"/>
    <field name="unit_cost" class="java.math.BigDecimal"/>
    <field name="value_impact" class="java.math.BigDecimal"/>
    <field name="reference" class="java.lang.String"/>
    <field name="note" class="java.lang.String"/>
    <field name="performed_by" class="java.lang.String"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["INVENTORY STOCK MOVEMENT REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="16">

            <textField>
                <reportElement x="0" y="0" width="80" height="16"/>
                <textFieldExpression><![CDATA[$F{movement_time}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="80" y="0" width="120" height="16"/>
                <textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="200" y="0" width="80" height="16"/>
                <textFieldExpression><![CDATA[$F{variant_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="280" y="0" width="60" height="16"/>
                <textFieldExpression><![CDATA[$F{transaction_type}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="0" width="50" height="16"/>
                <textFieldExpression><![CDATA[$F{quantity_delta}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="390" y="0" width="80" height="16"/>
                <textFieldExpression><![CDATA[$F{value_impact}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="470" y="0" width="85" height="16"/>
                <textFieldExpression><![CDATA[$F{performed_by}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>