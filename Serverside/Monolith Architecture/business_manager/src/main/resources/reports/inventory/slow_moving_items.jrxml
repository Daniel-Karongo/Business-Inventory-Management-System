<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="slow_moving_items"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <queryString>
        <![CDATA[
            SELECT
                p.name                     AS product_name,
                pv.sku                     AS variant_sku,
                SUM(ABS(st.quantity_delta)) AS total_movement
            FROM stock_transactions st
            JOIN product_variants pv
                 ON pv.id = st.product_variant_id
            JOIN products p
                 ON p.id = pv.product_id
            WHERE st.type IN ('SALE','RECEIPT','RETURN')
              AND DATE(st.timestamp) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY p.name, pv.sku
            HAVING SUM(ABS(st.quantity_delta)) > 0
            ORDER BY total_movement ASC
        ]]>
    </queryString>

    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="total_movement" class="java.lang.Long"/>

    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["SLOW MOVING ITEMS"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="420" height="18"/>
                <textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="420" y="0" width="180" height="18"/>
                <textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="600" y="0" width="202" height="18"/>
                <textFieldExpression><![CDATA[$F{total_movement}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>