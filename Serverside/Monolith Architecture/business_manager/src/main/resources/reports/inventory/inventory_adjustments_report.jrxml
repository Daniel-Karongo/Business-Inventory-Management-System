<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="inventory_adjustments_report"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <queryString>
        <![CDATA[
            SELECT
                p.name            AS product_name,
                pv.sku            AS variant_sku,
                b.name            AS branch_name,
                st.quantity_delta AS quantity_adjusted,
                st.reference      AS reference,
                st.note           AS note,
                st.performed_by   AS performed_by,
                st.timestamp      AS adjusted_at
            FROM stock_transactions st
            JOIN product_variants pv
                 ON pv.id = st.product_variant_id
            JOIN products p
                 ON p.id = pv.product_id
            JOIN branches b
                 ON b.id = st.branch_id
            WHERE st.type = 'ADJUSTMENT'
              AND DATE(st.timestamp) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            ORDER BY st.timestamp DESC
        ]]>
    </queryString>

    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="branch_name" class="java.lang.String"/>
    <field name="quantity_adjusted" class="java.lang.Long"/>
    <field name="reference" class="java.lang.String"/>
    <field name="note" class="java.lang.String"/>
    <field name="performed_by" class="java.lang.String"/>
    <field name="adjusted_at" class="java.sql.Timestamp"/>

    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["INVENTORY ADJUSTMENTS REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="200" height="18"/>
                <textFieldExpression><![CDATA[$F{adjusted_at}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="200" y="0" width="160" height="18"/>
                <textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="360" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="480" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{branch_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="600" y="0" width="80" height="18"/>
                <textFieldExpression><![CDATA[$F{quantity_adjusted}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="680" y="0" width="122" height="18"/>
                <textFieldExpression><![CDATA[$F{performed_by}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>