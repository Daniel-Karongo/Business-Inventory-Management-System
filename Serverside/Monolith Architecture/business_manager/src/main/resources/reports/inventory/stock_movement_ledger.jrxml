<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="stock_movement_ledger"
              pageWidth="842" pageHeight="595"
              orientation="Landscape"
              columnWidth="782"
              leftMargin="30" rightMargin="30"
              topMargin="30" bottomMargin="30">

    <parameter name="BRANCH_ID" class="java.lang.String"/>
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <queryString>
        <![CDATA[
            SELECT
              st.timestamp            AS movement_time,
              b.name                  AS branch_name,
              p.name                  AS product_name,
              pv.sku                  AS variant_sku,
              st.type                 AS transaction_type,
              st.quantity_delta       AS quantity_delta,
              st.unit_cost            AS unit_cost,
              (st.quantity_delta * st.unit_cost) AS value_impact,
              st.reference            AS reference,
              st.note                 AS note,
              st.performed_by         AS performed_by
            FROM stock_transactions st
            JOIN branches b          ON b.id = st.branch_id
            JOIN product_variants pv ON pv.id = st.product_variant_id
            JOIN products p          ON p.id = st.product_id
            WHERE st.branch_id = UUID_TO_BIN($P{BRANCH_ID})
              AND st.timestamp BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            ORDER BY st.timestamp ASC
        ]]>
    </queryString>

    <field name="movement_time" class="java.sql.Timestamp"/>
    <field name="branch_name" class="java.lang.String"/>
    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="transaction_type" class="java.lang.String"/>
    <field name="quantity_delta" class="java.lang.Long"/>
    <field name="unit_cost" class="java.math.BigDecimal"/>
    <field name="value_impact" class="java.math.BigDecimal"/>
    <field name="reference" class="java.lang.String"/>
    <field name="note" class="java.lang.String"/>
    <field name="performed_by" class="java.lang.String"/>

    <title>
        <band height="36">
            <textField>
                <reportElement x="0" y="0" width="782" height="18"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["STOCK MOVEMENT LEDGER"]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="20" width="782" height="14"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                  "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="18">
            <staticText><reportElement x="0" y="0" width="90" height="18"/><text><![CDATA[Time]]></text></staticText>
            <staticText><reportElement x="90" y="0" width="160" height="18"/><text><![CDATA[Product]]></text></staticText>
            <staticText><reportElement x="250" y="0" width="120" height="18"/><text><![CDATA[SKU]]></text></staticText>
            <staticText><reportElement x="370" y="0" width="90" height="18"/><text><![CDATA[Type]]></text></staticText>
            <staticText><reportElement x="460" y="0" width="70" height="18"/><text><![CDATA[Qty Î”]]></text></staticText>
            <staticText><reportElement x="530" y="0" width="80" height="18"/><text><![CDATA[Unit Cost]]></text></staticText>
            <staticText><reportElement x="610" y="0" width="90" height="18"/><text><![CDATA[Value]]></text></staticText>
            <staticText><reportElement x="700" y="0" width="82" height="18"/><text><![CDATA[Ref]]></text></staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="16">
            <textField><reportElement x="0" y="0" width="90" height="16"/><textFieldExpression><![CDATA[$F{movement_time}]]></textFieldExpression></textField>
            <textField><reportElement x="90" y="0" width="160" height="16"/><textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression></textField>
            <textField><reportElement x="250" y="0" width="120" height="16"/><textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression></textField>
            <textField><reportElement x="370" y="0" width="90" height="16"/><textFieldExpression><![CDATA[$F{transaction_type}]]></textFieldExpression></textField>
            <textField><reportElement x="460" y="0" width="70" height="16"/><textFieldExpression><![CDATA[$F{quantity_delta}]]></textFieldExpression></textField>
            <textField pattern="#,##0.00"><reportElement x="530" y="0" width="80" height="16"/><textFieldExpression><![CDATA[$F{unit_cost}]]></textFieldExpression></textField>
            <textField pattern="#,##0.00"><reportElement x="610" y="0" width="90" height="16"/><textFieldExpression><![CDATA[$F{value_impact}]]></textFieldExpression></textField>
            <textField><reportElement x="700" y="0" width="82" height="16"/><textFieldExpression><![CDATA[$F{reference}]]></textFieldExpression></textField>
        </band>
    </detail>
</jasperReport>