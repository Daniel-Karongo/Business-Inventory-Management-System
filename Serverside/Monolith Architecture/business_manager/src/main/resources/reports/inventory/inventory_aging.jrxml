<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="inventory_aging"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="30" bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="BRANCH_ID" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                p.name AS product_name,
                pv.sku AS variant_sku,
                b.name AS branch_name,
                SUM(st.quantity_delta) AS net_quantity,
                MAX(st.timestamp) AS last_movement_at,
                DATEDIFF(CURDATE(), MAX(st.timestamp)) AS days_since_last_movement,
                CASE
                  WHEN DATEDIFF(CURDATE(), MAX(st.timestamp)) > 180 THEN 'DEAD STOCK'
                  WHEN DATEDIFF(CURDATE(), MAX(st.timestamp)) BETWEEN 61 AND 180 THEN 'SLOW MOVING'
                  WHEN DATEDIFF(CURDATE(), MAX(st.timestamp)) BETWEEN 31 AND 60 THEN 'MODERATE'
                  ELSE 'FAST MOVING'
                END AS movement_category
            FROM stock_transactions st
            JOIN products p          ON p.id  = st.product_id
            JOIN product_variants pv ON pv.id = st.product_variant_id
            JOIN branches b          ON b.id  = st.branch_id
            WHERE st.branch_id = UUID_TO_BIN($P{BRANCH_ID})
            GROUP BY p.name, pv.sku, b.name
            ORDER BY days_since_last_movement DESC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="branch_name" class="java.lang.String"/>
    <field name="net_quantity" class="java.lang.Long"/>
    <field name="last_movement_at" class="java.sql.Timestamp"/>
    <field name="days_since_last_movement" class="java.lang.Integer"/>
    <field name="movement_category" class="java.lang.String"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["INVENTORY AGING REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="16">

            <textField><reportElement x="0" y="0" width="120" height="16"/><textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression></textField>
            <textField><reportElement x="120" y="0" width="80" height="16"/><textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression></textField>
            <textField><reportElement x="200" y="0" width="80" height="16"/><textFieldExpression><![CDATA[$F{net_quantity}]]></textFieldExpression></textField>
            <textField><reportElement x="280" y="0" width="80" height="16"/><textFieldExpression><![CDATA[$F{days_since_last_movement}]]></textFieldExpression></textField>
            <textField><reportElement x="360" y="0" width="95" height="16"/><textFieldExpression><![CDATA[$F{movement_category}]]></textFieldExpression></textField>

        </band>
    </detail>

</jasperReport>