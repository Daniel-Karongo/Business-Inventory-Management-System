<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="sales_refunds_report"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                DATE(p.timestamp)   AS refund_date,
                s.id                AS sale_id,
                c.name              AS customer_name,
                p.amount            AS refund_amount,
                p.method            AS refund_method,
                p.transaction_code  AS transaction_code
            FROM sales s
            JOIN payments p
                 ON p.sale_id = s.id
            JOIN customers c
                 ON c.id = s.customer_id
            WHERE s.status = 'REFUNDED'
              AND p.status = 'SUCCESS'
              AND DATE(p.timestamp) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            ORDER BY refund_date DESC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="refund_date" class="java.sql.Date"/>
    <field name="sale_id" class="java.lang.String"/>
    <field name="customer_name" class="java.lang.String"/>
    <field name="refund_amount" class="java.math.BigDecimal"/>
    <field name="refund_method" class="java.lang.String"/>
    <field name="transaction_code" class="java.lang.String"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["SALES REFUNDS REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{refund_date}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="120" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{sale_id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="240" y="0" width="220" height="18"/>
                <textFieldExpression><![CDATA[$F{customer_name}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="460" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{refund_amount}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="580" y="0" width="100" height="18"/>
                <textFieldExpression><![CDATA[$F{refund_method}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="680" y="0" width="122" height="18"/>
                <textFieldExpression><![CDATA[$F{transaction_code}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>