<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="daily_sales_report"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                DATE(s.created_at)    AS sale_date,
                COUNT(DISTINCT s.id)  AS total_sales_count,
                SUM(s.total_amount)   AS total_sales_amount,
                SUM(s.total_tax)      AS total_tax_amount,
                SUM(s.total_discount) AS total_discount_amount
            FROM sales s
            WHERE s.status = 'COMPLETED'
              AND DATE(s.created_at) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY DATE(s.created_at)
            ORDER BY sale_date ASC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="sale_date" class="java.sql.Date"/>
    <field name="total_sales_count" class="java.lang.Long"/>
    <field name="total_sales_amount" class="java.math.BigDecimal"/>
    <field name="total_tax_amount" class="java.math.BigDecimal"/>
    <field name="total_discount_amount" class="java.math.BigDecimal"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["DAILY SALES REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="140" height="18"/>
                <textFieldExpression><![CDATA[$F{sale_date}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="140" y="0" width="140" height="18"/>
                <textFieldExpression><![CDATA[$F{total_sales_count}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="280" y="0" width="180" height="18"/>
                <textFieldExpression><![CDATA[$F{total_sales_amount}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="460" y="0" width="160" height="18"/>
                <textFieldExpression><![CDATA[$F{total_tax_amount}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="620" y="0" width="182" height="18"/>
                <textFieldExpression><![CDATA[$F{total_discount_amount}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>