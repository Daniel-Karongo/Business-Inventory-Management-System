<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="sales_by_product"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="30" bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                p.name              AS product_name,
                pv.sku              AS variant_sku,
                SUM(sli.quantity)   AS quantity_sold,
                SUM(sli.line_total) AS total_sales,
                SUM(sli.line_total) / NULLIF(SUM(sli.quantity), 0) AS avg_unit_price
            FROM sales s
            JOIN sale_line_items sli
                 ON sli.sale_id = s.id
            JOIN product_variants pv
                 ON pv.id = sli.product_variant_id
            JOIN products p
                 ON p.id = pv.product_id
            WHERE s.status = 'COMPLETED'
              AND DATE(s.created_at) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY p.name, pv.sku
            ORDER BY total_sales DESC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="product_name" class="java.lang.String"/>
    <field name="variant_sku" class="java.lang.String"/>
    <field name="quantity_sold" class="java.lang.Long"/>
    <field name="total_sales" class="java.math.BigDecimal"/>
    <field name="avg_unit_price" class="java.math.BigDecimal"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["SALES BY PRODUCT REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="16">

            <textField>
                <reportElement x="0" y="0" width="180" height="16"/>
                <textFieldExpression><![CDATA[$F{product_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="180" y="0" width="80" height="16"/>
                <textFieldExpression><![CDATA[$F{variant_sku}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="260" y="0" width="60" height="16"/>
                <textFieldExpression><![CDATA[$F{quantity_sold}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="320" y="0" width="95" height="16"/>
                <textFieldExpression><![CDATA[$F{total_sales}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="415" y="0" width="95" height="16"/>
                <textFieldExpression><![CDATA[$F{avg_unit_price}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>