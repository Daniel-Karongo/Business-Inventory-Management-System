<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="sales_by_branch"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="30" bottomMargin="30">

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <queryString>
        <![CDATA[
            SELECT
                b.name               AS branch_name,
                COUNT(DISTINCT s.id) AS sales_count,
                SUM(sli.line_total)  AS total_sales,
                SUM(s.total_tax)     AS total_tax,
                SUM(s.total_discount) AS total_discount
            FROM sales s
            JOIN sale_line_items sli
                 ON sli.sale_id = s.id
            JOIN branches b
                 ON b.id = sli.branch_id
            WHERE s.status = 'COMPLETED'
              AND DATE(s.created_at) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY b.name
            ORDER BY total_sales DESC
        ]]>
    </queryString>

    <field name="branch_name" class="java.lang.String"/>
    <field name="sales_count" class="java.lang.Long"/>
    <field name="total_sales" class="java.math.BigDecimal"/>
    <field name="total_tax" class="java.math.BigDecimal"/>
    <field name="total_discount" class="java.math.BigDecimal"/>

    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["SALES BY BRANCH REPORT"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="16">

            <textField>
                <reportElement x="0" y="0" width="150" height="16"/>
                <textFieldExpression><![CDATA[$F{branch_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="150" y="0" width="70" height="16"/>
                <textFieldExpression><![CDATA[$F{sales_count}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="220" y="0" width="100" height="16"/>
                <textFieldExpression><![CDATA[$F{total_sales}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="320" y="0" width="100" height="16"/>
                <textFieldExpression><![CDATA[$F{total_tax}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="420" y="0" width="135" height="16"/>
                <textFieldExpression><![CDATA[$F{total_discount}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>