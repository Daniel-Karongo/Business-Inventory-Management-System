<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="sales_by_customer"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                c.name               AS customer_name,
                COUNT(DISTINCT s.id) AS total_sales_count,
                SUM(s.total_amount)  AS total_sales_amount
            FROM customers c
            JOIN sales s
                 ON s.customer_id = c.id
            WHERE c.deleted = false
              AND s.status = 'COMPLETED'
              AND DATE(s.created_at) BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY c.name
            ORDER BY total_sales_amount DESC
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="customer_name" class="java.lang.String"/>
    <field name="total_sales_count" class="java.lang.Long"/>
    <field name="total_sales_amount" class="java.math.BigDecimal"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["SALES BY CUSTOMER"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="420" height="18"/>
                <textFieldExpression><![CDATA[$F{customer_name}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="420" y="0" width="160" height="18"/>
                <textFieldExpression><![CDATA[$F{total_sales_count}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="580" y="0" width="222" height="18"/>
                <textFieldExpression><![CDATA[$F{total_sales_amount}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>