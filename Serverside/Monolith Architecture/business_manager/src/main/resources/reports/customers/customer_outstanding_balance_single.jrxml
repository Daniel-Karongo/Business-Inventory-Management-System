<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="customer_outstanding_balance_single"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="CUSTOMER_ID" class="java.lang.String"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                c.name                           AS customer_name,
                COALESCE(SUM(s.total_amount),0) AS total_sales,
                COALESCE(SUM(p.amount),0)       AS total_payments,
                COALESCE(SUM(s.total_amount),0)
                  - COALESCE(SUM(p.amount),0)   AS outstanding_balance
            FROM customers c
            LEFT JOIN sales s
                   ON s.customer_id = c.id
                  AND s.status = 'COMPLETED'
            LEFT JOIN payments p
                   ON p.sale_id = s.id
                  AND p.status = 'SUCCESS'
            WHERE c.deleted = false
              AND c.id = UNHEX(REPLACE($P{CUSTOMER_ID}, '-', ''))
            GROUP BY c.name
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="customer_name" class="java.lang.String"/>
    <field name="total_sales" class="java.math.BigDecimal"/>
    <field name="total_payments" class="java.math.BigDecimal"/>
    <field name="outstanding_balance" class="java.math.BigDecimal"/>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["CUSTOMER OUTSTANDING BALANCE"]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="22">

            <textField>
                <reportElement x="0" y="0" width="180" height="20"/>
                <textFieldExpression><![CDATA[$F{customer_name}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="190" y="0" width="110" height="20"/>
                <textFieldExpression><![CDATA[$F{total_sales}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="310" y="0" width="110" height="20"/>
                <textFieldExpression><![CDATA[$F{total_payments}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="430" y="0" width="110" height="20"/>
                <textFieldExpression><![CDATA[$F{outstanding_balance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>