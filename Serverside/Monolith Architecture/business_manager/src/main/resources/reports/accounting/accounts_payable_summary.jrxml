<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="accounts_payable_summary_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- ===================== STYLES ===================== -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="SubHeaderStyle" fontSize="13" isBold="true"/>
    <style name="ColumnHeaderStyle" fontSize="11" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="TotalStyle" fontSize="12" isBold="true"/>
    <style name="GrandTotalStyle" fontSize="13" isBold="true"/>

    <!-- ===================== PARAMETERS ===================== -->

    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <!-- Bean-based -->
    <queryString><![CDATA[]]></queryString>

    <!-- ===================== FIELDS ===================== -->

    <field name="supplierName" class="java.lang.String"/>
    <field name="payableBalance" class="java.math.BigDecimal"/>

    <!-- ===================== VARIABLES ===================== -->

    <variable name="TotalPayable"
              class="java.math.BigDecimal"
              calculation="Sum">
        <variableExpression><![CDATA[$F{payableBalance}]]></variableExpression>
    </variable>

    <!-- ===================== TITLE ===================== -->

    <title>
        <band height="85">

            <!-- Company -->
            <textField>
                <reportElement x="0" y="0" width="802" height="22"
                               style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <!-- Report Name -->
            <textField>
                <reportElement x="0" y="30" width="802" height="18"
                               style="SubHeaderStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["ACCOUNTS PAYABLE SUMMARY"]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ===================== COLUMN HEADER ===================== -->

    <columnHeader>
        <band height="22">

            <staticText>
                <reportElement x="0" y="0" width="600" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Supplier]]></text>
            </staticText>

            <staticText>
                <reportElement x="600" y="0" width="202" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Outstanding Balance]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ===================== DETAIL ===================== -->

    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="600" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{supplierName}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18"
                               style="DetailStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{payableBalance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ===================== PAGE FOOTER ===================== -->

    <pageFooter>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="500" height="15"/>
                <textFieldExpression><![CDATA[
                    "Generated by " + $P{GENERATED_BY}
                    + " on "
                    + new java.text.SimpleDateFormat("dd MMM yyyy HH:mm")
                        .format($P{GENERATED_AT})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="700" y="0" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[
                    "Page " + $V{PAGE_NUMBER}
                ]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <!-- ===================== SUMMARY ===================== -->

    <summary>
        <band height="30">

            <staticText>
                <reportElement x="450" y="5" width="150" height="18"
                               style="TotalStyle"/>
                <text><![CDATA[Total Payables]]></text>
            </staticText>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="5" width="202" height="20"
                               style="GrandTotalStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{TotalPayable}]]></textFieldExpression>
            </textField>

        </band>
    </summary>

</jasperReport>