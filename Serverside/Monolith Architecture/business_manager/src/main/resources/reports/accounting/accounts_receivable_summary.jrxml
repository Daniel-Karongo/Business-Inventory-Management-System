<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="accounts_receivable_summary_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- STYLES -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="HeaderStyle" fontSize="13" isBold="true"/>
    <style name="ColumnHeaderStyle" fontSize="11" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="TotalStyle" fontSize="12" isBold="true"/>

    <!-- PARAMETERS -->

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>
    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <queryString><![CDATA[]]></queryString>

    <!-- FIELDS -->

    <field name="customerName" class="java.lang.String"/>
    <field name="totalSales" class="java.math.BigDecimal"/>
    <field name="totalPayments" class="java.math.BigDecimal"/>
    <field name="receivableBalance" class="java.math.BigDecimal"/>

    <!-- VARIABLES -->

    <variable name="TotalReceivable"
              class="java.math.BigDecimal"
              calculation="Sum">
        <variableExpression><![CDATA[$F{receivableBalance}]]></variableExpression>
    </variable>

    <!-- TITLE -->

    <title>
        <band height="85">

            <textField>
                <reportElement x="0" y="0" width="802" height="22" style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="30" width="802" height="18" style="HeaderStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["ACCOUNTS RECEIVABLE SUMMARY"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="55" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- COLUMN HEADER -->

    <columnHeader>
        <band height="22">

            <staticText>
                <reportElement x="0" y="0" width="300" height="18" style="ColumnHeaderStyle"/>
                <text><![CDATA[Customer]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="0" width="170" height="18" style="ColumnHeaderStyle"/>
                <text><![CDATA[Total Sales]]></text>
            </staticText>

            <staticText>
                <reportElement x="470" y="0" width="170" height="18" style="ColumnHeaderStyle"/>
                <text><![CDATA[Total Payments]]></text>
            </staticText>

            <staticText>
                <reportElement x="640" y="0" width="162" height="18" style="ColumnHeaderStyle"/>
                <text><![CDATA[Outstanding]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- DETAIL -->

    <detail>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="300" height="18" style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{customerName}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="300" y="0" width="170" height="18" style="DetailStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{totalSales}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="470" y="0" width="170" height="18" style="DetailStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{totalPayments}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="640" y="0" width="162" height="18" style="DetailStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{receivableBalance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- FOOTER -->

    <pageFooter>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="450" height="15"/>
                <textFieldExpression><![CDATA[
                    "Generated by " + $P{GENERATED_BY}
                    + " on "
                    + new java.text.SimpleDateFormat("dd MMM yyyy HH:mm")
                        .format($P{GENERATED_AT})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="700" y="0" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <!-- SUMMARY -->

    <summary>
        <band height="25">
            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="640" y="0" width="162" height="20" style="TotalStyle"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$V{TotalReceivable}]]></textFieldExpression>
            </textField>
        </band>
    </summary>

</jasperReport>