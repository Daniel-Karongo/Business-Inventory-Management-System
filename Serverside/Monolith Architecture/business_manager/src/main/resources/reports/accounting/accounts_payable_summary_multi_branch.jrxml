<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="accounts_payable_summary_multi_branch_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">
    <property name="net.sf.jasperreports.when.no.data.type" value="NoDataSection"/>

    <!-- ================= STYLES ================= -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="HeaderStyle" fontSize="13" isBold="true"/>
    <style name="ColumnHeaderStyle" fontSize="11" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="BoldStyle" fontSize="11" isBold="true"/>
    <style name="GrandStyle" fontSize="13" isBold="true"/>

    <!-- ================= PARAMETERS ================= -->

    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <queryString><![CDATA[]]></queryString>

    <!-- ================= FIELDS ================= -->

    <field name="branchName" class="java.lang.String"/>
    <field name="supplierName" class="java.lang.String"/>
    <field name="payableBalance" class="java.math.BigDecimal"/>
    <field name="branchHeader" class="java.lang.Boolean"/>
    <field name="branchTotal" class="java.lang.Boolean"/>
    <field name="consolidatedTotal" class="java.lang.Boolean"/>

    <!-- ================= TITLE ================= -->

    <title>
        <band height="85">

            <textField>
                <reportElement x="0" y="0" width="802" height="22"
                               style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="30" width="802" height="18"
                               style="HeaderStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["ACCOUNTS PAYABLE (MULTI-BRANCH)"]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ================= COLUMN HEADER ================= -->

    <columnHeader>
        <band height="22">

            <staticText>
                <reportElement x="0" y="0" width="600" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Supplier]]></text>
            </staticText>

            <staticText>
                <reportElement x="600" y="0" width="202" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Outstanding Balance]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETAIL ================= -->

    <detail>
        <band height="20">

            <!-- Branch Header -->
            <textField>
                <reportElement x="0" y="0" width="802" height="18">
                    <printWhenExpression><![CDATA[$F{branchHeader}]]></printWhenExpression>
                    <styleExpression><![CDATA["BoldStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA[
                    "Branch: " + $F{branchName}
                ]]></textFieldExpression>
            </textField>

            <!-- Normal Row -->
            <textField>
                <reportElement x="0" y="0" width="600" height="18">
                    <printWhenExpression><![CDATA[
                        !$F{branchHeader} && !$F{branchTotal} && !$F{consolidatedTotal}
                    ]]></printWhenExpression>
                    <styleExpression><![CDATA["DetailStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA[$F{supplierName}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18">
                    <printWhenExpression><![CDATA[
                        !$F{branchHeader} && !$F{branchTotal} && !$F{consolidatedTotal}
                    ]]></printWhenExpression>
                    <styleExpression><![CDATA["DetailStyle"]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{payableBalance}]]></textFieldExpression>
            </textField>

            <!-- Branch Total -->
            <textField>
                <reportElement x="0" y="0" width="600" height="18">
                    <printWhenExpression><![CDATA[$F{branchTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["BoldStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA[
                    "Total - " + $F{branchName}
                ]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18">
                    <printWhenExpression><![CDATA[$F{branchTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["BoldStyle"]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{payableBalance}]]></textFieldExpression>
            </textField>

            <!-- Consolidated Total -->
            <textField>
                <reportElement x="0" y="0" width="600" height="18">
                    <printWhenExpression><![CDATA[$F{consolidatedTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["GrandStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA["CONSOLIDATED PAYABLES"]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18">
                    <printWhenExpression><![CDATA[$F{consolidatedTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["GrandStyle"]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{payableBalance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PAGE FOOTER ================= -->

    <pageFooter>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="500" height="15"/>
                <textFieldExpression><![CDATA[
                    "Generated by " + $P{GENERATED_BY}
                    + " on "
                    + new java.text.SimpleDateFormat("dd MMM yyyy HH:mm")
                        .format($P{GENERATED_AT})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="700" y="0" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[
                    "Page " + $V{PAGE_NUMBER}
                ]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>
    <noData>
        <band height="40">
            <staticText>
                <reportElement x="0" y="10" width="802" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[No branch payables found for selected period.]]></text>
            </staticText>
        </band>
    </noData>
</jasperReport>