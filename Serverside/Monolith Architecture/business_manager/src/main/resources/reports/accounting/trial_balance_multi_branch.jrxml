<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="trial_balance_multi_branch"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <property name="net.sf.jasperreports.when.no.data.type" value="NoDataSection"/>

    <!-- ================= STYLES ================= -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="HeaderStyle" fontSize="13" isBold="true"/>
    <style name="NormalStyle" fontSize="10"/>
    <style name="BoldStyle" fontSize="11" isBold="true"/>
    <style name="GrandTotalStyle" fontSize="13" isBold="true"/>

    <!-- ================= PARAMETERS ================= -->

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>
    <parameter name="COMPANY_NAME" class="java.lang.String"/>

    <queryString><![CDATA[]]></queryString>

    <!-- ================= FIELDS ================= -->

    <field name="branchName" class="java.lang.String"/>
    <field name="code" class="java.lang.String"/>
    <field name="name" class="java.lang.String"/>
    <field name="opening" class="java.math.BigDecimal"/>
    <field name="debit" class="java.math.BigDecimal"/>
    <field name="credit" class="java.math.BigDecimal"/>
    <field name="closing" class="java.math.BigDecimal"/>
    <field name="branchTotal" class="java.lang.Boolean"/>
    <field name="consolidatedTotal" class="java.lang.Boolean"/>

    <!-- ================= TITLE ================= -->

    <title>
        <band height="75">

            <textField>
                <reportElement x="0" y="0" width="802" height="22" style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="28" width="802" height="18" style="HeaderStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["TRIAL BALANCE (MULTI-BRANCH)"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="48" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ================= DETAIL ================= -->

    <detail>
        <band height="20">

            <!-- Branch Header -->
            <textField>
                <reportElement x="0" y="0" width="802" height="18">
                    <printWhenExpression><![CDATA[
                        $F{code} == null && !$F{branchTotal} && !$F{consolidatedTotal}
                    ]]></printWhenExpression>
                    <styleExpression><![CDATA["BoldStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA[
                    "Branch: " + $F{branchName}
                ]]></textFieldExpression>
            </textField>

            <!-- Account Detail -->
            <textField>
                <reportElement x="0" y="0" width="300" height="18">
                    <printWhenExpression><![CDATA[
                        $F{code} != null
                    ]]></printWhenExpression>
                </reportElement>
                <textFieldExpression><![CDATA[
                    $F{code} + " - " + $F{name}
                ]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="300" y="0" width="125" height="18">
                    <printWhenExpression><![CDATA[$F{code} != null]]></printWhenExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{opening}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="425" y="0" width="125" height="18">
                    <printWhenExpression><![CDATA[$F{code} != null]]></printWhenExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{debit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="550" y="0" width="125" height="18">
                    <printWhenExpression><![CDATA[$F{code} != null]]></printWhenExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{credit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="675" y="0" width="127" height="18">
                    <printWhenExpression><![CDATA[$F{code} != null]]></printWhenExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{closing}]]></textFieldExpression>
            </textField>

            <!-- Branch Total -->
            <textField>
                <reportElement x="0" y="0" width="300" height="18">
                    <printWhenExpression><![CDATA[$F{branchTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["BoldStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA[
                    "Total - " + $F{branchName}
                ]]></textFieldExpression>
            </textField>

            <!-- Consolidated Total -->
            <textField>
                <reportElement x="0" y="0" width="300" height="18">
                    <printWhenExpression><![CDATA[$F{consolidatedTotal}]]></printWhenExpression>
                    <styleExpression><![CDATA["GrandTotalStyle"]]></styleExpression>
                </reportElement>
                <textFieldExpression><![CDATA["CONSOLIDATED TOTAL"]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <noData>
        <band height="40">
            <staticText>
                <reportElement x="0" y="10" width="802" height="20"/>
                <textElement textAlignment="Center"/>
                <text><![CDATA[No branch balances found.]]></text>
            </staticText>
        </band>
    </noData>

</jasperReport>