<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="trial_balance_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <property name="net.sf.jasperreports.when.no.data.type" value="AllSectionsNoDetail"/>

    <!-- ================= STYLES ================= -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="HeaderStyle" fontSize="13" isBold="true"/>
    <style name="ColumnHeaderStyle" fontSize="11" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="TotalStyle" fontSize="11" isBold="true"/>

    <!-- ================= PARAMETERS ================= -->

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>
    <parameter name="BRANCH_NAME" class="java.lang.String"/>
    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <!-- NO SQL -->
    <queryString><![CDATA[]]></queryString>

    <!-- ================= FIELDS ================= -->

    <field name="code" class="java.lang.String"/>
    <field name="name" class="java.lang.String"/>
    <field name="opening" class="java.math.BigDecimal"/>
    <field name="debit" class="java.math.BigDecimal"/>
    <field name="credit" class="java.math.BigDecimal"/>
    <field name="closing" class="java.math.BigDecimal"/>

    <!-- ================= VARIABLES ================= -->

    <variable name="TotalOpening" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{opening}]]></variableExpression>
    </variable>

    <variable name="TotalDebit" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{debit}]]></variableExpression>
    </variable>

    <variable name="TotalCredit" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{credit}]]></variableExpression>
    </variable>

    <variable name="TotalClosing" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{closing}]]></variableExpression>
    </variable>

    <!-- ================= TITLE ================= -->

    <title>
        <band height="85">

            <textField>
                <reportElement x="0" y="0" width="802" height="22"
                               style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="28" width="802" height="18"
                               style="HeaderStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["TRIAL BALANCE"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="48" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    $P{BRANCH_NAME} == null ? "Consolidated" : "Branch: " + $P{BRANCH_NAME}
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="63" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ================= COLUMN HEADER ================= -->

    <columnHeader>
        <band height="20">

            <staticText>
                <reportElement x="0" y="0" width="300" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Account]]></text>
            </staticText>

            <staticText>
                <reportElement x="300" y="0" width="125" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Opening]]></text>
            </staticText>

            <staticText>
                <reportElement x="425" y="0" width="125" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Debit]]></text>
            </staticText>

            <staticText>
                <reportElement x="550" y="0" width="125" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Credit]]></text>
            </staticText>

            <staticText>
                <reportElement x="675" y="0" width="127" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Closing]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETAIL ================= -->

    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="300" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[
                    $F{code} + " - " + $F{name}
                ]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="300" y="0" width="125" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{opening}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="425" y="0" width="125" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{debit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="550" y="0" width="125" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{credit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="675" y="0" width="127" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{closing}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= SUMMARY ================= -->

    <summary>
        <band height="25">

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="300" y="0" width="125" height="20"
                               style="TotalStyle"/>
                <textFieldExpression><![CDATA[$V{TotalOpening}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="425" y="0" width="125" height="20"
                               style="TotalStyle"/>
                <textFieldExpression><![CDATA[$V{TotalDebit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="550" y="0" width="125" height="20"
                               style="TotalStyle"/>
                <textFieldExpression><![CDATA[$V{TotalCredit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="675" y="0" width="127" height="20"
                               style="TotalStyle"/>
                <textFieldExpression><![CDATA[$V{TotalClosing}]]></textFieldExpression>
            </textField>

        </band>
    </summary>

</jasperReport>