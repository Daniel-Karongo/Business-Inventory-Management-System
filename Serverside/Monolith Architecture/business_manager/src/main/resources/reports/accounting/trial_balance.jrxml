<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="trial_balance"
              pageWidth="595" pageHeight="842"
              columnWidth="555"
              leftMargin="20" rightMargin="20"
              topMargin="30" bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>

    <!-- SQL -->
    <queryString>
        <![CDATA[
            SELECT
                a.code        AS accountCode,
                a.name        AS accountName,
                SUM(CASE WHEN le.direction = 'DEBIT'  THEN le.amount ELSE 0 END) AS debit,
                SUM(CASE WHEN le.direction = 'CREDIT' THEN le.amount ELSE 0 END) AS credit
            FROM ledger_entries le
            JOIN journal_entries je ON je.id = le.journal_entry_id
            JOIN accounts a ON a.id = le.account_id
            WHERE je.posted_at BETWEEN $P{FROM_DATE} AND $P{TO_DATE}
            GROUP BY a.code, a.name
            ORDER BY a.code
        ]]>
    </queryString>


    <!-- FIELDS -->
    <field name="accountCode" class="java.lang.String"/>
    <field name="accountName" class="java.lang.String"/>
    <field name="debit" class="java.math.BigDecimal"/>
    <field name="credit" class="java.math.BigDecimal"/>

    <!-- TITLE -->
    <title>
        <band height="50">
            <textField>
                <reportElement x="0" y="0" width="555" height="25"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA["TRIAL BALANCE"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="30" width="555" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- COLUMN HEADER -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="300" height="20"/>
                <text><![CDATA[Account]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="120" height="20"/>
                <text><![CDATA[Debit]]></text>
            </staticText>
            <staticText>
                <reportElement x="420" y="0" width="135" height="20"/>
                <text><![CDATA[Credit]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- DETAIL -->
    <detail>
        <band height="18">
            <textField>
                <reportElement x="0" y="0" width="300" height="18"/>
                <textFieldExpression><![CDATA[
                    $F{accountCode} + " - " + $F{accountName}
                ]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="300" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{debit}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="420" y="0" width="135" height="18"/>
                <textFieldExpression><![CDATA[$F{credit}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>