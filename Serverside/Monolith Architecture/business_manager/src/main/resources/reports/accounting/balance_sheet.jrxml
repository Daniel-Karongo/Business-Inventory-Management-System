<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="balance_sheet_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- ================= STYLES (MUST COME FIRST) ================= -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="SectionStyle" fontSize="13" isBold="true"/>
    <style name="ColumnHeaderStyle" fontSize="11" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="TotalStyle" fontSize="11" isBold="true"/>

    <!-- ================= PARAMETERS ================= -->

    <parameter name="AS_AT_DATE" class="java.sql.Timestamp"/>
    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <!-- ================= QUERY ================= -->

    <queryString>
        <![CDATA[
            SELECT
                a.code AS account_code,
                a.name AS account_name,
                a.type AS account_type,
                SUM(
                    CASE
                        WHEN a.type IN ('ASSET','EXPENSE') AND le.direction='DEBIT'
                            THEN le.amount
                        WHEN a.type IN ('ASSET','EXPENSE') AND le.direction='CREDIT'
                            THEN -le.amount
                        WHEN a.type IN ('LIABILITY','EQUITY','INCOME') AND le.direction='CREDIT'
                            THEN le.amount
                        WHEN a.type IN ('LIABILITY','EQUITY','INCOME') AND le.direction='DEBIT'
                            THEN -le.amount
                    END
                ) AS balance
            FROM accounts a
            JOIN ledger_entries le ON le.account_id = a.id
            JOIN journal_entries je ON je.id = le.journal_entry_id
            WHERE a.active = true
              AND je.posted = true
              AND je.reversed = false
              AND le.posted_at <= $P{AS_AT_DATE}
            GROUP BY a.code, a.name, a.type
            HAVING balance <> 0
            ORDER BY a.type, a.code
        ]]>
    </queryString>

    <!-- ================= FIELDS ================= -->

    <field name="account_code" class="java.lang.String"/>
    <field name="account_name" class="java.lang.String"/>
    <field name="account_type" class="java.lang.String"/>
    <field name="balance" class="java.math.BigDecimal"/>

    <!-- ================= VARIABLES ================= -->

    <variable name="SectionTotal"
              class="java.math.BigDecimal"
              calculation="Sum"
              resetType="Group"
              resetGroup="AccountTypeGroup">
        <variableExpression><![CDATA[$F{balance}]]></variableExpression>
    </variable>

    <variable name="GrandTotal"
              class="java.math.BigDecimal"
              calculation="Sum">
        <variableExpression><![CDATA[$F{balance}]]></variableExpression>
    </variable>

    <!-- ================= GROUP ================= -->

    <group name="AccountTypeGroup">
        <groupExpression><![CDATA[$F{account_type}]]></groupExpression>

        <groupHeader>
            <band height="24">
                <textField>
                    <reportElement x="0" y="4" width="802" height="18"
                                   style="SectionStyle"/>
                    <textFieldExpression><![CDATA[$F{account_type}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>

        <groupFooter>
            <band height="20">
                <textField pattern="#,##0.00;(#,##0.00)">
                    <reportElement x="600" y="0" width="202" height="18"
                                   style="TotalStyle"/>
                    <textFieldExpression><![CDATA[$V{SectionTotal}]]></textFieldExpression>
                </textField>
            </band>
        </groupFooter>
    </group>

    <!-- ================= TITLE ================= -->

    <title>
        <band height="75">

            <textField>
                <reportElement x="0" y="0" width="802" height="22"
                               style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="28" width="802" height="18"
                               style="SectionStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["BALANCE SHEET"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="48" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "As at " +
                    new java.text.SimpleDateFormat("dd MMM yyyy")
                        .format($P{AS_AT_DATE})
                ]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ================= COLUMN HEADER ================= -->

    <columnHeader>
        <band height="20">

            <staticText>
                <reportElement x="0" y="0" width="100" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Code]]></text>
            </staticText>

            <staticText>
                <reportElement x="100" y="0" width="500" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Account]]></text>
            </staticText>

            <staticText>
                <reportElement x="600" y="0" width="202" height="18"
                               style="ColumnHeaderStyle"/>
                <text><![CDATA[Balance]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETAIL ================= -->

    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="100" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{account_code}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="100" y="0" width="500" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{account_name}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[$F{balance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PAGE FOOTER (MUST COME BEFORE SUMMARY) ================= -->

    <pageFooter>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="450" height="15"/>
                <textFieldExpression><![CDATA[
                    "Generated by " + $P{GENERATED_BY}
                    + " on "
                    + new java.text.SimpleDateFormat("dd MMM yyyy HH:mm")
                        .format($P{GENERATED_AT})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="700" y="0" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

</jasperReport>