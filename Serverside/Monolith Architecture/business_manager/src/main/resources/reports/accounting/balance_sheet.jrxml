<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="balance_sheet"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- PARAMETERS -->
    <parameter name="AS_AT_DATE" class="java.sql.Timestamp"/>

    <!-- QUERY -->
    <queryString>
        <![CDATA[
            SELECT
                a.code AS account_code,
                a.name AS account_name,
                a.type AS account_type,
                SUM(
                    CASE
                        WHEN le.direction = 'DEBIT'  THEN le.amount
                        WHEN le.direction = 'CREDIT' THEN -le.amount
                    END
                ) AS balance
            FROM accounts a
            JOIN ledger_entries le
                 ON le.account_id = a.id
            JOIN journal_entries je
                 ON je.id = le.journal_entry_id
            WHERE a.active = true
              AND je.posted = true
              AND je.reversed = false
              AND le.posted_at <= $P{AS_AT_DATE}
            GROUP BY a.code, a.name, a.type
            ORDER BY a.type, a.code
        ]]>
    </queryString>

    <!-- FIELDS -->
    <field name="account_code" class="java.lang.String"/>
    <field name="account_name" class="java.lang.String"/>
    <field name="account_type" class="java.lang.String"/>
    <field name="balance" class="java.math.BigDecimal"/>

    <!-- GROUP BY ACCOUNT TYPE -->
    <group name="AccountTypeGroup">
        <groupExpression><![CDATA[$F{account_type}]]></groupExpression>

        <groupHeader>
            <band height="22">
                <textField>
                    <reportElement x="0" y="2" width="802" height="18"/>
                    <textElement>
                        <font isBold="true"/>
                    </textElement>
                    <textFieldExpression><![CDATA[$F{account_type}]]></textFieldExpression>
                </textField>
            </band>
        </groupHeader>
    </group>

    <!-- TITLE -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="802" height="25"/>
                <textElement textAlignment="Center">
                    <font size="15" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "BALANCE SHEET AS AT " + new java.text.SimpleDateFormat("yyyy-MM-dd").format($P{AS_AT_DATE})
                ]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- DETAIL -->
    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{account_code}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="120" y="0" width="420" height="18"/>
                <textFieldExpression><![CDATA[$F{account_name}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00">
                <reportElement x="540" y="0" width="262" height="18"/>
                <textFieldExpression><![CDATA[$F{balance}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

</jasperReport>