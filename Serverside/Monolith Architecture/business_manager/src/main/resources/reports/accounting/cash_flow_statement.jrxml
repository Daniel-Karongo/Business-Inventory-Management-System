<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="cash_flow_statement_enterprise"
              pageWidth="842"
              pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20"
              rightMargin="20"
              topMargin="30"
              bottomMargin="30">

    <!-- ================= STYLES ================= -->

    <style name="TitleStyle" fontSize="18" isBold="true"/>
    <style name="SectionStyle" fontSize="13" isBold="true"/>
    <style name="DetailStyle" fontSize="10"/>
    <style name="TotalStyle" fontSize="11" isBold="true"/>
    <style name="GrandTotalStyle" fontSize="13" isBold="true"/>

    <!-- ================= PARAMETERS ================= -->

    <parameter name="FROM_DATE" class="java.lang.String"/>
    <parameter name="TO_DATE" class="java.lang.String"/>
    <parameter name="COMPANY_NAME" class="java.lang.String"/>
    <parameter name="GENERATED_BY" class="java.lang.String"/>
    <parameter name="GENERATED_AT" class="java.util.Date"/>

    <!-- ================= BEAN BASED ================= -->

    <queryString><![CDATA[]]></queryString>

    <!-- ================= FIELDS ================= -->

    <field name="code" class="java.lang.String"/>
    <field name="name" class="java.lang.String"/>
    <field name="netMovement" class="java.math.BigDecimal"/>
    <field name="total" class="java.lang.Boolean"/>

    <!-- ================= VARIABLES ================= -->

    <variable name="TotalCashMovement"
              class="java.math.BigDecimal"
              calculation="Sum">
        <variableExpression><![CDATA[$F{netMovement}]]></variableExpression>
    </variable>

    <!-- ================= TITLE ================= -->

    <title>
        <band height="75">

            <textField>
                <reportElement x="0" y="0" width="802" height="22"
                               style="TitleStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$P{COMPANY_NAME}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="28" width="802" height="18"
                               style="SectionStyle"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA["CASH FLOW STATEMENT"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="48" width="802" height="15"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[
                    "Period: " + $P{FROM_DATE} + " to " + $P{TO_DATE}
                ]]></textFieldExpression>
            </textField>

        </band>
    </title>

    <!-- ================= COLUMN HEADER ================= -->

    <columnHeader>
        <band height="20">

            <staticText>
                <reportElement x="0" y="0" width="600" height="18"
                               style="SectionStyle"/>
                <text><![CDATA[Cash Account]]></text>
            </staticText>

            <staticText>
                <reportElement x="600" y="0" width="202" height="18"
                               style="SectionStyle"/>
                <text><![CDATA[Net Movement]]></text>
            </staticText>

        </band>
    </columnHeader>

    <!-- ================= DETAIL ================= -->

    <detail>
        <band height="18">

            <textField>
                <reportElement x="0" y="0" width="600" height="18"
                               style="DetailStyle"/>
                <textFieldExpression><![CDATA[
                    $F{code} == null ?
                    $F{name} :
                    $F{code} + " - " + $F{name}
                ]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="18"
                               style="DetailStyle">
                    <styleExpression><![CDATA[
                        $F{total} ? "TotalStyle" : "DetailStyle"
                    ]]></styleExpression>
                </reportElement>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[$F{netMovement}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ================= PAGE FOOTER ================= -->

    <pageFooter>
        <band height="20">

            <textField>
                <reportElement x="0" y="0" width="450" height="15"/>
                <textFieldExpression><![CDATA[
                    "Generated by " + $P{GENERATED_BY}
                    + " on "
                    + new java.text.SimpleDateFormat("dd MMM yyyy HH:mm")
                        .format($P{GENERATED_AT})
                ]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="700" y="0" width="100" height="15"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <!-- ================= SUMMARY ================= -->

    <summary>
        <band height="25">

            <textField pattern="#,##0.00;(#,##0.00)">
                <reportElement x="600" y="0" width="202" height="20"
                               style="GrandTotalStyle"/>
                <textFieldExpression><![CDATA[$V{TotalCashMovement}]]></textFieldExpression>
            </textField>

        </band>
    </summary>

</jasperReport>